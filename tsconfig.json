{
    "compilerOptions": {
      "sourceMap": true,
      "strict": false,
      "lib": ["esnext"],
      "esModuleInterop": true,
      "target": "es5",
      "module": "commonjs",
      "rootDir": "./",
      "baseUrl": "./src",
      "outDir": "./dist",
      "paths": {
        "@modules/*": ["modules/*"],
        "@config/*": ["config/*"],
        "@shared/*": ["shared/*"],
        "@errors/*": ["errors/*"],
        "@utils/*": ["utils/*"]
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    }
  }